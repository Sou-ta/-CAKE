<p class="notice"></p>
<div class="container px-5 px-sm-0 ">
 <div class="row">
   <div class="bg-light px-4 mx-4 ">
    <h3>会員情報編集</h3>
   </div>
 </div>
 <div class="row">
   <div class="col-9 mx-auto mt-3">
     <table>
       <%= form_with model: @customer, local:true do |f| %>

  <tr>
  <th><%= f.label :名前 %></th>
  <td><%= f.text_field :last_name,autoforcus: true, autocomplete: "last_name",  placeholder: "(姓)" , class: "form-control mt-3 mx-5" %></td>
  <td><%= f.text_field :first_name,autoforcus: true, autocomplete: "first_name",  placeholder: "(名)", class: "form-control mt-3 mx-5" %></td>
  </tr>

  <tr>
  <th><%= f.label :フリガナ %></th>
  <td><%= f.text_field :last_name_kana,autoforcus: true, autocomplete: "last_name_kana",  placeholder: "(セイ)" , class: "form-control mt-3 mx-5" %></td>
  <td><%= f.text_field :first_name_kana,autoforcus: true, autocomplete: "first_name_kana",  placeholder: "(メイ)", class: "form-control mt-3 mx-5" %></td>
  </tr>

  <tr>
  <th><%= f.label :郵便番号 %></th>
  <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder:"1234567", class: "form-control mt-3 mx-5" %></td>
  </tr>

  <tr>
  <th><%= f.label :住所 %></th>
  <td><%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder:"東京都新宿三丁目", class: "form-control mt-3 mx-5" %></td>
  </tr>

  <tr>
  <th><%= f.label :電話番号 %></th>
  <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder:"1234567890", class: "form-control mt-3 mx-5" %></td>
  </tr>

  <tr>
  <th><%= f.label :メールアドレス %></th>
  <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@dfssd.com", class: "form-control mt-3 mx-5" %></td>
  </tr>

    <th></th>
   <td><%= f.submit "編集内容を保存", class:'btn btn-success px-4 mt-3 mx-5' %></td>
   <td><%= link_to "退会する",  quit_path, class:'btn btn-danger mt-3 px-3' %></td>
  <% end %>
     </table>
   </div>
 </div>
 </div>