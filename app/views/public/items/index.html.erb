
<div class="container px-5 px-sm-0">
  <div class="row mx-5 mt-3">
  <h3>商品一覧</h3>
  <div class="mt-2">
  <h5>（全<%= @items.count %>件）</h5>
  </div>
  </div>
  <div class="row">
      <% @items.each do |item| %>
       <div class="col">
         <div class="card mx-auto mt-3">
          <% if item.image.attached? %>
           <%= link_to item_path(item) do %>
            <%= image_tag item.image, size: "240x240", class:"img-thumbnail card-img-top" %>
           <% end %>
           <% end %>
           <div class="card-body">
             <div class="card-title">
               <%= link_to item.name, item_path(item), class:'text-dark' %>
             </div>
             <div class="card-body">
               ￥<%= (item.full_price).to_s(:price) %>
             </div>
           </div>
         </div>
       </div>
      <% end %>
    </div>
