<p class="notice"><%= flash[:notice] %></p>
<div class="container px-5 px-sm-0 ">
 <div class="row">
  <div class="bg-light px-4 mx-4 ">
  <h3>商品詳細</h3>
  </div>
 </div>
 <div class="row">
   <div class="col-md-4 pt-3 m-auto">
    <% if @item.image.attached? %>
    <%= image_tag @item.image, size: "300x300", class:" img-thumbnail" %>
    <% end %>
  </div>
   <div class="my-3 mx-auto p-5 col-md-8">
    <table class="table table-borderless">
     <tr>
      <th><h3><%= @item.name %></h3></th>
     </tr>
     <tr>
      <td><h4><%= @item.introduction %></h4></td>
     </tr>
      <tr>
      <th><h3>￥<%= @item.price.to_s(:price) %></h3>
      <h6>（税込）</h6></th>
     </tr>
     <tr>

      <%= form_for (@cart_item) do |f| %>
            <% if customer_signed_in? %>
            <td><%= f.number_field :amount, min:1, placeholder: "個数選択" %><span>個</span>
            <%= f.hidden_field :item_id, :value => @item.id %>
            <%= f.submit "カートに入れる", class: "btn btn-success btn-md mx-5" %></td>
            <% end %>
      <% end %>

     </tr>
    </table>
   </div>
 </div>
 <div class="container">
     <div class="row">
    <div class="col text-center text-danger">
    <a><%= flash[:alert] %></a>
    </div>
   </div>
 </div>