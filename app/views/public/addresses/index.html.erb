<p class="notice"><%= flash[:notice] %></p>
<div class="container px-5 px-sm-0 ">
 <div class="row">
   <div class="bg-light px-4 mx-4 mb-3 ">
    <h3>配送先登録/一覧</h3>
   </div>
 </div>
<div class="row">
  <div class="col-10">
    <table class="table table-borderless">
     <%= form_with model: @address do |f| %>
      <tr>
        <th><%= f.label :"郵便番号(ハイフンなし)" ,class: "control-label mt-3" %></th>
        <td><%= f.text_field :postal_code, class: " form-control mt-3" %></td>
      </tr>
      <tr>
        <th><%= f.label :"住所" ,class: "control-label mt-3" %></th>
        <td><%= f.text_field :address, class: "form-control mt-3 address" %></td>
      </tr>
      <tr>
        <th><%= f.label :"宛名" ,class: "control-label mt-3" %></th>
        <td><%= f.text_field :name, class: "form-control mt-3 name" %></td>
        <td><%= f.submit '新規登録' ,class: "btn btn-md btn-success mt-3 mx-5" %></td>
      </tr>
     <% end %>
    </table>
   </div>
</div>
<div class="row">
  <div class="col-10">
    <table class="table table-bordered">
     <thead>
       <th class="table-active border-dark">郵便番号</th>
       <th class="table-active border-dark">住所</th>
       <th class="table-active border-dark">宛名</th>
       <th class="table-active border-dark"></th>
     </thead>
     <tbody>
       <% @addresses.each do |address| %>
       <tr class="table-bordered">
       <td class=" border-dark"><%= address.postal_code %></td>
       <td class=" border-dark"><%= address.address %></td>
       <td class=" border-dark"><%= address.name %></td>
       <td class=" border-dark text-center">
          <%= link_to "編集する", edit_address_path(address), class:'btn btn-success btn-md mx-2' %>
          <%= link_to "削除する", address_path(address), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class:'btn btn-danger btn-md mx-2' %>
       </td>
       </tr>
       <% end %>
     </tbody>
    </table>
   </div>
</div>
</div>