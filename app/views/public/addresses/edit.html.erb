<p class="notice"><%= flash[:notice] %></p>
<div class="container px-5 px-sm-0 ">
 <div class="row">
   <div class="bg-light px-4 mx-4 mb-3 ">
    <h3>配送先編集</h3>
   </div>
 </div>
<div class="row">
  <div class="col-11">
    <table class="table table-borderless">
     <%= form_with model: @address, url: address_path do |f| %>
      <tr>
        <th><%= f.label :"郵便番号(ハイフンなし)" ,class: "control-label mt-3" %></th>
        <td><%= f.text_field :postal_code, class: " form-control mt-3" %></td>
      </tr>
      <tr>
        <th><%= f.label :"住所" ,class: "control-label mt-3" %></th>
        <td><%= f.text_field :address, class: "form-control mt-3 address" %></td>
      </tr>
      <tr>
        <th><%= f.label :"宛名" ,class: "control-label mt-3" %></th>
        <td><%= f.text_field :name, class: "form-control mt-3 name" %></td>
        <td><%= f.submit '変更内容を保存' ,class: "btn btn-md btn-success mt-3 mx-5" %></td>
      </tr>
    </table>
    <% end %>
   </div>
</div>