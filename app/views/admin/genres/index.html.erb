<p class="notice"><%= flash[:notice] %></p>
<div class="container px-5 px-sm-0 ">
<div class="row">
  <div class="bg-light px-4 mx-4 ">
  <h3>ジャンル一覧・追加</h3>
  </div>
</div>
<div class="row">
  <diV class="my-5">
   <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
    <tr>
    <th><%= f.label :ジャンル名 %></th>
    <td><%= f.text_field :name, class: 'mx-5' %></td>
    <td><%= f.submit '新規登録', class: 'btn btn-success mx-5 px-4' %></td>
    </tr>
   <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-5">
<table class="table table-hover table-inverse ">
    <thead>
        <tr>
            <th class="table-active">ジャンル</th>
            <th colspan="2" class="table-active"></th>
        </tr>

    </thead>
    <tbody>
       <% @genres.each do |genre| %>
        <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-success ml-5 px-3' %></td>
        </tr>
        <% end %>
    </tbody>
</table>
  </div>
  </div>
</div>


</div>