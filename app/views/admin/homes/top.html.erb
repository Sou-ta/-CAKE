<p class="notice"><%= flash[:notice] %></p>
<div class="container px-5 px-sm-0 ">
 <div class="row">
   <div class="col-3 bg-light px-4 mx-4 mb-3 ">
    <h3>注文履歴一覧</h3>
   </div>
 </div>
 <div class="row">
   <div class="col-10 mx-auto">
     <table class="table">
     <thead>
       <th class="table-light">購入日時</th>
       <th class="table-light">購入者</th>
       <th class="table-light">注文個数</th>
       <th class="table-light">注文ステータス</th>
     </thead>
     <tbody>
      <% @orders.each do |order| %>
       <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order) %></td>
       <td><%= order.customer.last_name %>
           <%= order.customer.first_name %></td>
       <td><%= order.order_details.sum(:amount) %></td>
       <td><%= order.status %></td>
           <%= paginate @orders %>
     </tbody>
     <% end %>
     </table>
      <%= paginate @orders %>
   </div>
 </div>
