<div class="container my-5">
  <div class="row">
    <div class="bg-light px-4 ">
      <h3>管理者ログイン</h3>
    </div>
  </div>
  <div class="row">
    <div class= "offset-sm-3 col-sm-6">


      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group form-inline mt-3">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ml-3 form-control" %>
      </div>

      <div class="field form-group form-inline">
      <%= f.label :パスワード %>
      <%= f.password_field :password, autocomplete: "current-password", class: "ml-5 form-control" %>
      </div>

      <div class="actions">
      <%= f.submit "ログイン",class: "mt-3 px-4 btn btn-primary btn-blook center-block" %>
      </div>
      <% end %>

    </div>
  </div>
</div>