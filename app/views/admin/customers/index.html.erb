<p class="notice"><%= flash[:notice] %></p>
<div class="container px-5 px-sm-0 ">
 <div class="row">
  <div class="bg-light px-4 mx-4 ">
  <h3>会員一覧</h3>
  </div>
 </div>
 <div class="row">
  <div class="col-8 mx-auto mt-4">

    <table class="table table-border">
     <thead>
       <tr>
         <th class="table-active">会員ID</th>
         <th class="table-active">氏名</th>
         <th class="table-active">メールアドレス</th>
         <th class="table-active">ステータス</th>
       </tr>
     </thead>
     <tbody>
      <% @customers.each do |customer| %>
       <tr>
         <td><%= customer.id %></td>

         <td><%= link_to customer.last_name+ customer.first_name,admin_customer_path(customer) %></td>

         <td><%= customer.email %></td>
         <th>
    	     <% if customer.is_deleted? == false %>
					     <p class="text-success">有効</p>
				      <% else %>
					     <p class="text-secondary">退会</p>
				      <% end %>
				      </th>
       </tr>
      <% end %>
     </tbody>
    </table>

  </div>
 </div>
</div>